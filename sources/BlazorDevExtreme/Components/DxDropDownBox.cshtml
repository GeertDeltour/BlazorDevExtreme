			} else {
				this.valueChangeEvent = value;
			}
		}
	}
	protected override async Task OnInitAsync() {
		await base.OnInitAsync();
	}
	public object GetDataSourceEx() {
		return DevExpress.Ui.DxDropDownBoxInterop.GetDataSourceEx(dxTarget);
	}
	public void Dispose() {
	}
}
