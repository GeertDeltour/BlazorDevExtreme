	object ShowEvent {
		get => isInitialized ? DevExpress.Ui.DxContextMenuInterop.GetShowEvent(dxTarget) : showEvent;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxContextMenuInterop.SetShowEvent(dxTarget, value);
			} else {
				this.showEvent = value;
			}
		}
	}
	string submenuDirection;
	[Parameter]
	string SubmenuDirection {
		get => isInitialized ? DevExpress.Ui.DxContextMenuInterop.GetSubmenuDirection(dxTarget) : submenuDirection;
