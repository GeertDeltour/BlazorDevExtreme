@using Microsoft.AspNetCore.Blazor.Components
@using Microsoft.AspNetCore.Blazor
@implements IDisposable
@inherits DxBlazorCompoment<DevExpress.Ui.DxTextAreaOptions>

<div id="@Id" ref="dxTarget"></div>

@functions {
	ElementRef dxTarget;
	public DxTextArea() : base("DxTextArea") { }
	protected override DevExpress.Ui.DxTextAreaOptions CreateOptions() {
		return new DevExpress.Ui.DxTextAreaOptions {
			autoResizeEnabled = autoResizeEnabled,
			maxHeight = maxHeight,
			minHeight = minHeight,
			spellcheck = spellcheck,
		};
	}
	protected override void Init(DevExpress.Ui.DxTextAreaOptions options) {
		DevExpress.Ui.DxTextAreaInterop.Init(dxTarget, options);
	}
	bool? autoResizeEnabled;
	[Parameter]
	bool? AutoResizeEnabled {
		get => isInitialized ? DevExpress.Ui.DxTextAreaInterop.GetAutoResizeEnabled(dxTarget) : autoResizeEnabled;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextAreaInterop.SetAutoResizeEnabled(dxTarget, value);
			} else {
				this.autoResizeEnabled = value;
			}
		}
	}
	object maxHeight;
	[Parameter]
	object MaxHeight {
		get => isInitialized ? DevExpress.Ui.DxTextAreaInterop.GetMaxHeight(dxTarget) : maxHeight;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextAreaInterop.SetMaxHeight(dxTarget, value);
			} else {
				this.maxHeight = value;
			}
		}
	}
	object minHeight;
	[Parameter]
	object MinHeight {
		get => isInitialized ? DevExpress.Ui.DxTextAreaInterop.GetMinHeight(dxTarget) : minHeight;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextAreaInterop.SetMinHeight(dxTarget, value);
			} else {
				this.minHeight = value;
			}
		}
	}
	bool? spellcheck;
	[Parameter]
	bool? Spellcheck {
		get => isInitialized ? DevExpress.Ui.DxTextAreaInterop.GetSpellcheck(dxTarget) : spellcheck;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextAreaInterop.SetSpellcheck(dxTarget, value);
			} else {
				this.spellcheck = value;
			}
		}
	}
	protected override async Task OnInitAsync() {
		await base.OnInitAsync();
	}
	public void Dispose() {
	}
}
