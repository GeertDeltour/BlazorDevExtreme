@implements IDisposable
@inherits DxBlazorCompoment<DevExpress.Ui.DxTextBoxOptions>

<div id="@Id"></div>

@functions {
	public DxTextBox() : base("DxTextBox") { }
	protected override DevExpress.Ui.DxTextBoxOptions CreateOptions() {
		return new DevExpress.Ui.DxTextBoxOptions {
			maxLength = maxLength,
			mode = mode,
			value = value,
		};
	}
	protected override void Init(DevExpress.Ui.DxTextBoxOptions options) {
		DevExpress.Ui.DxTextBoxInterop.Init(Id, options);
	}
	object maxLength;
	public object MaxLength {
		get => isInitialized ? DevExpress.Ui.DxTextBoxInterop.GetMaxLength(Id) : maxLength;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextBoxInterop.SetMaxLength(Id, value);
			} else {
				this.maxLength = value;
			}
		}
	}
	string mode;
	public string Mode {
		get => isInitialized ? DevExpress.Ui.DxTextBoxInterop.GetMode(Id) : mode;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextBoxInterop.SetMode(Id, value);
			} else {
				this.mode = value;
			}
		}
	}
	string value;
	public string Value {
		get => isInitialized ? DevExpress.Ui.DxTextBoxInterop.GetValue(Id) : value;
		set {
			if (isInitialized) {
				DevExpress.Ui.DxTextBoxInterop.SetValue(Id, value);
			} else {
				this.value = value;
			}
		}
	}
	protected override async Task OnInitAsync() {
		await base.OnInitAsync();
	}
	public void Dispose() {
	}
}
